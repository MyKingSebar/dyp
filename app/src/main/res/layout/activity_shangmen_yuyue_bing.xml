<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF26282E"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32">

        <ImageView

            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/icon_new_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@id/img_back"
            android:text="返回"
            android:textColor="#F78126"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="医生详情"
            android:textColor="#F78126"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <GridView
        android:id="@+id/gv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_263"
        android:numColumns="6"
        android:gravity="center_horizontal"
        android:columnWidth="@dimen/dp_90"
        android:verticalSpacing="@dimen/dp_11"
        android:horizontalSpacing="@dimen/dp_11">

    </GridView>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_ok"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/yellowf78126_btn_bg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>
