<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_bt1"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="595px"
    android:layout_height="match_parent"
    android:layout_marginRight="5px"
    android:background="@drawable/pad_main1">
    <RelativeLayout
        android:id="@+id/bt1_bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pad_main1_2"
        >

        <ImageView
            android:id="@+id/im_img"
            android:layout_width="140px"
            android:layout_height="160px"
            android:layout_marginTop="50px"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="144px"
            android:layout_height="68px"
            android:background="@drawable/tv_call"
            android:layout_marginTop="52px"
            android:layout_marginLeft="228px"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/white"
            tool:text="李医生"
            android:layout_marginTop="130px"
            android:layout_marginLeft="240px"
            />
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20px"
            android:textColor="@color/white"
            tool:text="李医生"
            android:layout_marginTop="175px"
            android:layout_marginLeft="242px"
            />
    </RelativeLayout>
</RelativeLayout>
