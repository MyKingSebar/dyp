<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.health.DossierHertrateNotIndicationsActivitys">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_toolbar" />

        <TextView
            android:id="@+id/title_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#26282E"
            android:elevation="3dp"
            android:text="保存"
            android:visibility="visible"
            />

    </RelativeLayout>


    <com.donkingliang.labels.LabelsView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:labelBackground="@drawable/label_bg"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
        app:minWidth="101dp"
        app:minHeight="36dp"
    app:labelTextColor="@drawable/label_text_color"
    app:labelTextSize="14sp"
    app:labelTextPaddingBottom="7dp"
    app:labelTextPaddingLeft="16.5dp"
    app:labelTextPaddingRight="16.5dp"
    app:labelTextPaddingTop="8dp"
    app:lineMargin="19.5dp"
    app:wordMargin="15dp"
    app:selectType="SINGLE"
    app:maxSelect="3" />

</LinearLayout>
