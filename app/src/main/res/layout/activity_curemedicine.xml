<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_toolbar" />

        <TextView
            android:id="@+id/dossierdiabetes_medicine_commit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#26282E"
            android:elevation="3dp"
            android:text="保存"
            android:visibility="visible"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="8dp">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/dossierdiabetes_medicine_edit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top"
            android:hint="请输入正在服用的治疗药物，并用逗号隔开"
            android:imeOptions="actionDone"
            android:maxLength="200"
            android:minHeight="250dp"
            android:padding="10dp"
            android:textColor="@color/black_trans_87"
            android:textColorHint="@color/black_trans_26"
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>