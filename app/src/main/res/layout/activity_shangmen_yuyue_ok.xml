<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF26282E"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32">

        <ImageView

            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/icon_new_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@id/img_back"
            android:text="返回"
            android:textColor="#F78126"
            android:textSize="@dimen/sp_15" />

  

    </RelativeLayout>

   <LinearLayout
       android:layout_width="@dimen/dp_400"
       android:layout_height="@dimen/dp_290"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:background="#14FFFFFF"
       android:paddingRight="@dimen/dp_20"
       android:paddingLeft="@dimen/dp_20"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="预约订单"
           android:textSize="@dimen/sp_15"
           android:textColor="@color/yellowf78126"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/dp_9"
           />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123123"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约人："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123123"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="护理项："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/xiangmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123123"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="护理时间："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123123"
        android:textSize="@dimen/sp_12"
        android:textColor="#F78126"
        />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="服务费用："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123123"
        android:textSize="@dimen/sp_12"
        android:textColor="#F78126"
        />
</LinearLayout>
       <TextView
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="预约完成，等待护士接单…"
           android:textSize="@dimen/sp_12"
           android:textColor="@color/white"

           android:layout_weight="1"/>
       <LinearLayout
           android:gravity="center"
           android:layout_marginTop="@dimen/dp_5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_gotime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:text="5"
               android:textSize="@dimen/sp_10"
               android:textColor="#1FAABD"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="秒后自动返回首页"
               android:textSize="@dimen/sp_10"
               android:textColor="@color/white"
               />
       </LinearLayout>
       <Button
           android:layout_marginTop="@dimen/dp_10"
           android:layout_gravity="center_horizontal"
           android:id="@+id/bt_yy"
           android:layout_width="@dimen/dp_120"
           android:layout_height="@dimen/dp_30"
           android:layout_marginBottom="@dimen/dp_20"
           android:background="@drawable/yellowf78126_btn_bg"
           android:text="返回"
           android:textColor="@color/white"
           android:textSize="@dimen/sp_12" />
   </LinearLayout>
</LinearLayout>
