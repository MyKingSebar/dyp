<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_black" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_135">

        <TextView
            android:id="@+id/caixue"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/caixue" />

        <TextView
            android:id="@+id/shuye"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/shuye"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/zhushe"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/zhushe" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_135">

        <TextView
            android:id="@+id/daoniao"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/daoniao" />

        <TextView
            android:id="@+id/wuhua"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/wuhua"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/guanchang"
            android:layout_width="@dimen/dp_190"
            android:layout_height="match_parent"
            android:background="@drawable/guanchang" />
    </LinearLayout>
</LinearLayout>
