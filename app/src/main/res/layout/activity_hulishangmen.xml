<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        >

        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/icon_new_back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@id/img_back"
            android:text="返回"

            android:textColor="#F78126"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_had_register"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/selector_yellow_line_four_radius_left"
                android:button="@null"
                android:gravity="center"
                android:text="护理服务"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:id="@+id/cb_collect"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/selector_yellow_line_four_radius_left"
                android:button="@null"
                android:gravity="center"
                android:text="上门护士"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal" ></LinearLayout>
</LinearLayout>
