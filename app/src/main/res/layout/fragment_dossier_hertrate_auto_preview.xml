<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/heart_main_background"
    android:orientation="vertical"
    tools:context="cn.v1.unionc_user.ui.home.health.DossierHeartrateAutoPreviewFragment">

    <ImageView
        android:id="@+id/im_status"
        android:layout_width="172dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:background="@drawable/im_status_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dossierheartrate_connect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请打开手机蓝牙和设备电源"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dossierheartrate_disconnect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="断开连接"
            android:textColor="@color/text_all_green"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_link_device"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:background="@drawable/green_btn_bg2"
        android:gravity="center"
        android:text="连接设备"
        android:textColor="@color/white"
        android:textSize="14dp" />


</LinearLayout>
