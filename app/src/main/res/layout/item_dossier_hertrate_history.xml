<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000-2-2"
            android:textColor="@color/text_153"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_edit_2"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_heart_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/black_34"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="查看读图结果"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_red_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/shape_red_dot"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="95dp"
                    android:text="心率"
                    android:textColor="@color/text_153"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_34"
                    android:textSize="16dp"
                    tools:text="82次/分" />

                <TextView
                    android:id="@+id/tv_heart_rate_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black_34"
                    android:textSize="16dp"
                    tools:text="偏高" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_no_indications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minWidth="95dp"
                    android:text="不适应症"
                    android:textColor="@color/text_153"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_heart_no_indications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_34"
                    android:textSize="16dp"
                    tools:text=",出冷汗，心悸,出冷汗，心悸,出冷汗，心悸,出冷汗，心悸" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_heart_drug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minWidth="95dp"
                    android:text="服用药物"
                    android:textColor="@color/text_153"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_heart_drug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_34"
                    android:textSize="16dp"
                    tools:text="氏鳠，青霉素，按格式，好的话，氏鳠，青霉素，按格式，好的话，" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hert_disease_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minWidth="95dp"
                    android:text="心脏病类型"
                    android:textColor="@color/text_153"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_heart_disease_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black_34"
                    android:textSize="16dp"
                    tools:text="无病史" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_look_ecg"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:background="@drawable/shape_look_ecg"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="查看心电图"
            android:textColor="@color/text_102"
            android:textSize="14dp"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_bg" />


</LinearLayout>