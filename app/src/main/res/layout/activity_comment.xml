<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#26282E"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_black" />

    <LinearLayout
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_290"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10">

            <v1.cn.unionc_pad.view.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    tools:text="李晓光" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/keshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        tools:text="内科" />

                    <TextView
                        android:id="@+id/zhiwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        tools:text="主任医师" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    tools:text="青岛市南社区医院" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#CCCCCC" />
<LinearLayout

    android:gravity="center"
    android:layout_marginTop="@dimen/dp_22"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_18">
<TextView
    android:id="@+id/tuijian"
    android:layout_width="@dimen/dp_18"
    android:layout_height="@dimen/dp_18"
    android:background="@drawable/icon_tj_no"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="推荐"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"

    />
<TextView
    android:id="@+id/butuijian"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_width="@dimen/dp_18"
    android:layout_height="@dimen/dp_18"
    android:background="@drawable/icon_btj_no"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="不推荐"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"

    />

</LinearLayout>
        <EditText
            android:id="@+id/et"
            android:layout_marginTop="@dimen/dp_20"
            android:windowSoftInputMode="stateHidden"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_button_line_white"
            android:hint="对医生的本次就诊服务给予评价，获得壹家积分～"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_7"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content">
<CheckBox
    android:id="@+id/cb"
    android:button="@null"
android:background="@drawable/cb_nimingpingjia"
    android:layout_width="@dimen/dp_10"
    android:layout_height="@dimen/dp_10" />
            <TextView
                android:text="匿名评价"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
            <Button
                android:id="@+id/bt_tijiao"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@drawable/yellowf78126_btn_bg"
                android:text="提交"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <Button
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/bt_quxiao"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@drawable/black_btn_bg"
                android:text="取消"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
