<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26282E">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_39"

        >

        <LinearLayout
            android:layout_width="@dimen/dp_170"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_spwz"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:background="@drawable/main_spwz" />
            <TextView
                android:id="@+id/tv_wyhd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_kysp" />
            <TextView
                android:id="@+id/tv_jkzb"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_jkzb" />



            <TextView
                android:id="@+id/tv_jjhj"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_jjhj" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_smhl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:background="@drawable/main_smhl" />

            <TextView
                android:id="@+id/tv_axdc"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_axdc" />

            <TextView
                android:id="@+id/tv_znjc"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_znjc" />

            <TextView
                android:id="@+id/tv_grzx"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/main_grzx" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_170"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#F78126"
                android:text="医养动态"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"

                />

           <android.support.v7.widget.RecyclerView
               android:id="@+id/recycle"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </LinearLayout>


</FrameLayout>
