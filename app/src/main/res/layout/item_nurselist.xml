<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="@dimen/dp_295"
    android:layout_height="wrap_content"
    android:background="#33FFFFFF"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_5"

    >
<v1.cn.unionc_pad.view.CircleImageView
    android:id="@+id/img"
    android:layout_width="@dimen/dp_45"
    android:layout_height="@dimen/dp_45"
    android:layout_marginLeft="@dimen/dp_10"
    />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            tools:text="李晓光"
            />
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="泰州路社区卫生服务站"
            />
        <TextView
            android:id="@+id/tv_marjor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="擅长：5年护理经验，擅长常规护理、综…"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <LinearLayout
            android:id="@+id/l_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_11"
            >

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:background="@drawable/icon_nur_zan" />

            <TextView
                android:id="@+id/tv_like"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/sp_9"
                tools:text="100" />

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/icon_nur_pinglun" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/sp_9"
                tools:text="100" />
            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/icon_nur_fensi" />

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/sp_9"
                tools:text="100" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_9"/>
    </LinearLayout>



</LinearLayout>


